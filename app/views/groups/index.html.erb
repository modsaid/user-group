<h1>Groups:</h1>
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>title</th>
      <th>members</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.id %></td>
        <td><%= group.title %></td>
        <td>
	<ul>
	<% group.users.each do |user| %>
        <li><%=user.name %></li>
        <% end %>
	</ul>
	</td>
	<td><%#= link_to 'Show', my_show_path(:id => group.id) %></td>
	<td><%= link_to 'edit', edit_user_path(:id => group.id) %></td>
	<td><%= link_to 'Show', user_path(:id => group.id) %></td>
        <td><%= link_to 'destroy', group, method: :delete, data: {confirm: "are you sure!"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

